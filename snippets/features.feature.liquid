{%- comment -%} Auto Generated Variables start {%- endcomment -%}
{%- liquid
  assign icon_list = block.settings.icon_list
  assign title = block.settings.title
  assign content = block.settings.content
  assign url = block.settings.url
  assign svg = block.settings.svg
  assign image = block.settings.image
-%}
{%- comment -%} Auto Generated Variables end {%- endcomment -%}

{% case type %}
  {% when 'icon-minimal' %}
    <a id="block--{{ block.id }}" {{ block.shopify_attributes }}
       class="{% if url %}group hf:bg-gray-50{% endif %} flex gap-4 relative rounded-theme-md p-2"
      {% if url %}href="{{ url }}"{% endif %}>
      <div class="text-primary-outline w-5 h-5">
        {% if svg != blank %}
          <div class="svg:w-5 svg:h-5">
            {{ svg }}
          </div>
        {% else %}
          {% render '_icon', icon: icon_list, class: 'w-5 h-5' %}
        {% endif %}
      </div>
      <div>
        <h3 class="mb-2 text-base font-medium leading-[1.25rem]">{{ title }}</h3>
        <div class="prose prose-theme prose-sm pb-2">
          {{ content }}
        </div>
      </div>
    </a>
  {% when 'icon-flat' %}
    <a id="block--{{ block.id }}" {{ block.shopify_attributes }}
       class="{% if url %}group{% endif %} block"
      {% if url %}href="{{ url }}"{% endif %}>
      <div class="h-10 w-10 rounded-theme flex items-center justify-center bg-primary-bg/30 text-primary-text group-hf:bg-primary-bg/50">
        {% if svg != blank %}
          <div class="svg:w-5 svg:h-5">
            {{ svg }}
          </div>
        {% else %}
          {% render '_icon', icon: icon_list, class: 'w-5 h-5' %}
        {% endif %}
      </div>
      <h3 class="mt-3 text-lg font-medium">{{ title }}</h3>
      <div class="prose prose-theme prose-sm pb-2">
        {{ content }}
      </div>
      {% if url %}
        <span class="group-hf:underline text-[13px] text-theme-text/60 hf:text-theme-text">
          {{ "features.read_more" | t }}
        </span>
      {% endif %}
    </a>

  {% when 'icon-cards' %}
    <a id="block--{{ block.id }}" {{ block.shopify_attributes }}
       class="{% if url %}group hf:bg-gray-100{% endif %} block text-center relative flow-root bg-gray-50 rounded-theme-lg px-4 sm:px-6 pt-8 pb-6 mt-5"
      {% if url %}href="{{ url }}"{% endif %}>
      <div class="h-10 w-10 rounded-theme-md flex items-center justify-center bg-primary-bg/30 text-primary-text group-hf:bg-primary-bg/50 absolute left-1/2 -translate-x-1/2 shadow-lg -top-5">
        {% if svg != blank %}
          <div class="svg:w-5 svg:h-5">
            {{ svg }}
          </div>
        {% else %}
          {% render '_icon', icon: icon_list, class: 'w-5 h-5' %}
        {% endif %}
      </div>
      <h3 class="mb-2 text-base font-medium">{{ title }}</h3>
      <div class="prose prose-theme prose-sm pb-2">
        {{ content }}
      </div>
      {% if url %}
        <span class="group-hf:underline text-[13px] text-theme-text/60 hf:text-theme-text">
          Read more
        </span>
      {% endif %}
    </a>

  {% when 'image-flat' %}
    <figure id="block--{{ block.id }}" {{ block.shopify_attributes }}>
      <picture class="block w-full overflow-hidden pb-[100%] relative rounded-theme mb-3">
        {% render '_image', image: image, class: "absolute w-full h-full object-cover" %}
      </picture>
      <figcaption>
        <h3 class="mb-1 text-sm font-medium">{{ title }}</h3>
        <div class="prose prose-theme prose-sm pb-2">
          {{ content }}
        </div>
        {% if url %}
          <a href="{{ url }}"
             class="hf:underline text-[13px] text-theme-text/60 hf:text-theme-text">
            Read more
          </a>
        {% endif %}
      </figcaption>
    </figure>

  {% when 'image-column' %}
    <figure id="block--{{ block.id }}" {{ block.shopify_attributes }}
            class="grid sm:grid-cols-[5fr_7fr] gap-6 lg:grid-cols-[4fr_8fr] lg:gap-8">
      <figcaption class="flex flex-col justify-center">
        <h3 class="mb-1 text-sm font-medium">{{ title }}</h3>
        <div class="prose prose-theme prose-sm pb-2">
          {{ content }}
        </div>
        {% if url %}
          <a href="{{ url }}"
             class="hf:underline text-[13px] text-theme-text/60 hf:text-theme-text">
            Read more
          </a>
        {% endif %}
      </figcaption>
      <picture class="block w-full overflow-hidden -order-1 sm:order-2 pb-[100%] sm:pb-[48%] lg:pb-[28%] relative rounded-theme">
        {% render '_image', image: image, class: "absolute w-full h-full object-cover" %}
      </picture>
    </figure>

  {% when 'story' %}
    {% liquid
      assign orderClasses = 'order-first md:ml-auto'
      assign mod = forloop.index | modulo: 2
      if mod == 0
        assign orderClasses = 'md:order-last'
      endif
    %}
    <section class="grid md:grid-cols-2 md:gap-16">
      <main class="flex flex-col justify-center items-start pb-4 md:pb-8 {{ orderClasses }}">
        <div class="h-10 w-10 rounded-theme flex items-center justify-center bg-primary-bg/30 text-primary-text group-hf:bg-primary-bg/50 mb-6">
          {% if svg != blank %}
            <div class="svg:w-5 svg:h-5">
              {{ svg }}
            </div>
          {% else %}
            {% render '_icon', icon: icon_list, class: 'w-5 h-5' %}
          {% endif %}
        </div>
        <h3 class="mb-1 h4 font-semibold">{{ title }}</h3>
        <div class="prose prose-theme prose-sm pb-2">
          {{ content }}
        </div>
        {% if url %}
          <a href="{{ url }}"
             class="button-primary mt-6">
            Read more
          </a>
        {% endif %}
      </main>
      <picture class="w-full pb-[66%] relative rounded-theme">
        {% render '_image', image: image, class: "absolute w-full h-full object-cover rounded-theme-md", width: 900, height: 600 %}
      </picture>
    </section>

{% endcase %}