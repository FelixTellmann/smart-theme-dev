       class="hidden md:inline-flex relative text-primary-outline/75 hover:text-primary-outline">
      <span class="sr-only">
        Account
      </span>
      {% render "_icon", icon: 'user', class: 'w-6 h-6 stroke-[1.5px]' %}
    </a>
  {% endif %}
  {% if customer == null %}
    <a href="{{ routes.account_login_url }}"
       class="hidden md:inline-flex relative text-primary-outline/75 hover:text-primary-outline">
      <span class="sr-only">
        Login
      </span>
      {% render "_icon", icon: 'user', class: 'w-6 h-6 stroke-[1.5px]' %}
    </a>
  {% endif %}
  <button type="button"
          data-drawer-open="cart"
          class="relative text-primary-outline/75 hover:text-primary-outline">
    <span class="sr-only">
      Search
    </span>
    {% render "_icon", icon: 'cart', class: "w-6 h-6 stroke-[1.5px]" %}
    <span class="absolute flex items-center justify-center bg-theme-text text-theme-bg rounded-full -right-1.5 -top-1 h-4 w-4 text-[10px] font-medium tracking-tight leading-none">
      <span data-cart-item-count>{{ cart.item_count }}</span>
    </span>
  </button>
</div>

