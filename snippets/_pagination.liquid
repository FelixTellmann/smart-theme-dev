{%- if paginate.pages > 1 -%}
  {% case settings.design_pagination_style %}
    {% when "floating" %}
      <nav class="relative z-0 inline-grid auto-cols-min grid-flow-col-dense gap-2 md:gap-3 rounded-theme-md shadow-sm"
           aria-label="Pagination">
        <a class="relative inline-flex items-center justify-center w-8 h-8 border border-theme-text/30 bg-theme-bg text-sm font-medium text-theme-text/80 hover:bg-theme-text/5 [&:not([href])]:text-theme-text/30 [&:not([href])]:cursor-not-allowed [&:not([href])]:bg-theme-text/5"
            {% if paginate.previous %} href="{{ paginate.previous.url }}"
            {% else %} aria-disabled="true"{% endif %} >
          <span class="sr-only">Previous</span>
          {% render '_icon', icon: 'chevron-left', class: 'w-2 h-2' %}
        </a>

        {% assign defaultColors = "bg-theme-bg border-theme-text/30 text-theme-text/80 hover:bg-theme-text/5" %}
        {% assign currentColors = "z-10 bg-theme-text/80 border-theme-text !text-theme-bg !cursor-default" %}

        {%- for part in paginate.parts -%}
          <a class="relative inline-flex items-center justify-center w-8 h-8 border text-sm font-medium [&:not([href])]:text-theme-text/30 [&:not([href])]:cursor-not-allowed {% if part.title == paginate.current_page %}{{ currentColors }}{% else %}{{ defaultColors }}{% endif %}"
              {%- if part.is_link -%} href="{{ part.url }}"
              {% else %} aria-disabled="true"{% endif %}
             aria-current="page">
            {{ part.title }}
          </a>
        {%- endfor -%}

        <a class="relative inline-flex items-center justify-center w-8 h-8 border border-theme-text/30 bg-theme-bg text-sm font-medium text-theme-text/80 hover:bg-theme-text/5 [&:not([href])]:text-theme-text/30 [&:not([href])]:cursor-not-allowed"
        {% if paginate.next %} href="{{ paginate.next.url }}"
        {% else %} aria-disabled="true"{% endif %}>
          <span class="sr-only">Next</span>
          {% render '_icon', icon: 'chevron-right', class: 'w-2 h-2' %}
        </a>
      </nav>

    {% when 'compact' %}
      <nav class="relative z-0 inline-flex rounded-theme-md shadow-sm -space-x-px"
           aria-label="Pagination">
        <a class="relative inline-flex items-center justify-center w-10 h-10 rounded-l-theme-md border border-theme-text/30 bg-theme-bg text-sm font-medium text-theme-text/50 hover:bg-theme-text/5 [&:not([href])]:text-theme-text/30 [&:not([href])]:cursor-not-allowed"
            {% if paginate.previous %} href="{{ paginate.previous.url }}"
            {% else %} aria-disabled="true"{% endif %} >
          <span class="sr-only">Previous</span>
          {% render '_icon', icon: 'chevron-left', class: 'w-2 h-2' %}
        </a>

        {% assign defaultColors = "bg-theme-bg border-theme-text/30 text-theme-text/50 hover:bg-theme-text/5" %}
        {% assign currentColors = "z-10 bg-theme-bg/20 border-theme-text/50 !text-theme-text !cursor-default" %}
        {%- for part in paginate.parts -%}
          <a class="relative inline-flex items-center justify-center w-10 h-10 border text-sm font-medium [&:not([href])]:text-theme-text/30 [&:not([href])]:cursor-not-allowed {% if part.title == paginate.current_page %}{{ currentColors }}{% else %}{{ defaultColors }}{% endif %}"
              {%- if part.is_link -%} href="{{ part.url }}"
              {% else %} aria-disabled="true"{% endif %}
             aria-current="page">
            {{ part.title }}
          </a>
        {%- endfor -%}

        <a class="relative inline-flex items-center justify-center w-10 h-10 rounded-r-theme-md border border-theme-text/30 bg-theme-bg text-sm font-medium text-theme-text/50 hover:bg-theme-text/5 [&:not([href])]:text-theme-text/30 [&:not([href])]:cursor-not-allowed"
        {% if paginate.next %} href="{{ paginate.next.url }}"
        {% else %} aria-disabled="true"{% endif %}>
          <span class="sr-only">Next</span>
          {% render '_icon', icon: 'chevron-right', class: 'w-2 h-2' %}
        </a>
      </nav>

  {% endcase %}
{%- endif -%}
