{% comment %}
Variables:
 - megaMenus: string of handles (--handle1--handle2--handle3-- etc.)
{% endcomment %}

<nav class="hidden lg:block">
  {% for link in section.settings.menu.links %}
    {% assign megaHandle = "--" | append: link.handle | append: "--" %}
    {% if link.links.size <= 0 or megaMenus contains megaHandle %}{% continue %}{% endif %}
    <div class="absolute top-full -mt-4 pt-[1.25rem] cursor-default opacity-0 transition-all duration-75 pointer-events-none hfwa:!pointer-events-auto hfwa:!opacity-100"
         data-header-link-dropdown="{{ link.handle }}">
      <ul role="list"
          class="bg-theme-bg p-6 shadow-xl drop-shadow-lg space-y-3 min-w-[220px]">
        {% for dropdown_link in link.links %}
          <li class="relative">
            <a href="{{ dropdown_link.url }}"
               class="peer flex items-center w-full justify-between text-gray-600 hfa:text-gray-900 stroke-0 [&:hover_>_svg]:stroke-2 [&:focus_>_svg]:stroke-2 [&:active_>_svg]:stroke-2">
              <span class="pr-6 whitespace-nowrap">{{ dropdown_link.title }}</span>
              {% if dropdown_link.links.size > 0 %}{% render "_icon", icon: 'arrow-right', class: "w-3 h-3 stroke-[1.5px]" %}{% endif %}
              {% if dropdown_link.links.size == 0 %}{% render "_icon", icon: 'chevron-right', class: "w-2 h-2" %}{% endif %}
            </a>
            {% if dropdown_link.links.size > 0 %}
              <div role="list"
                   class="absolute left-full -top-4 -m-4 p-4 pl-[2.625rem] pointer-events-none transition-all opacity-0 peer-hfwa:opacity-100 peer-hfwa:pointer-events-auto hfwa:pointer-events-auto hfwa:opacity-100">
                <ul class="bg-theme-bg p-6 shadow-md drop-shadow-sm space-y-3">
                  {% for dropdown_slideout_link in dropdown_link.links %}
                    <a href="{{ dropdown_link.url }}"
                       class="flex items-center w-full justify-between text-gray-500 hfa:text-gray-900 stroke-0 hfa:stroke-2">
                      <span class="pr-6 whitespace-nowrap">{{ dropdown_link.title }}</span>
                      {% render "_icon", icon: 'chevron-right', class: "w-2 h-2" %}
                    </a>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endfor %}
</nav>
