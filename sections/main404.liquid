{%- comment -%} Auto Generated Variables start {%- endcomment -%}
{%- liquid
  assign image = section.settings.image
  assign image__overlay = section.settings.image__overlay
  assign min_height = section.settings.min_height
  assign align__vertical = section.settings.align__vertical
  assign align__horizontal = section.settings.align__horizontal
  assign color_scheme = section.settings.color_scheme
-%}
{%- comment -%} Auto Generated Variables end {%- endcomment -%}

{% liquid
  assign align_content = align__vertical | append: ' ' | append: align__horizontal
%}

<div class="{{ color_scheme }} {{ section_layout }} {{ padding_top }} {{ padding_bottom }} {{ responsive_visibility }}">
  <figure class="grid w-full relative isolate min-h-[calc(100vh-var(--top-bar-spacing))]">
    {% render '_image', image: image, class: 'absolute inset-0 w-full h-full object-cover z-0 ' %}
    <figcaption class="z-10 w-full h-full px-6 py-8 "
                style="background-image: {{ image__overlay }};">
      <div class="container h-full w-full flex flex-col {{ align_content }} space-y-3">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'text' %}
              {% render 'main404.text', block: block %}
            {% when 'image' %}
              {% render 'main404.image', block: block %}
            {% when 'buttons' %}
              {% render 'main404.buttons', block: block %}
          {% endcase %}
        {% endfor %}
      </div>
    </figcaption>
  </figure>
</div>

{% render '_color-group-access', colorGroup: section.settings.color_scheme, paddingTop: section.settings.padding_top, paddingBottom: section.settings.padding_bottom %}
{% schema %}
