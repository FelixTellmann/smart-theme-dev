  "name": "t:sections.search_filter_sort_bar.name",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.search_filter_sort_bar.settings.header__1.content"
    },
    {
      "type": "checkbox",
      "id": "filters__show",
      "default": true,
      "label": "t:sections.search_filter_sort_bar.settings.filters__show.label",
      "info": "t:sections.search_filter_sort_bar.settings.filters__show.info"
    },
    {
      "type": "select",
      "id": "filters__type",
      "default": "cards",
      "options": [
        {
          "value": "megamenu",
          "label": "t:sections.search_filter_sort_bar.settings.filters__type.options__1.label"
        },
        {
          "value": "cards",
          "label": "t:sections.search_filter_sort_bar.settings.filters__type.options__2.label"
        }
      ],
      "label": "t:sections.search_filter_sort_bar.settings.filters__type.label",
      "info": "t:sections.search_filter_sort_bar.settings.filters__type.info"
    },
    {
      "type": "checkbox",
      "id": "filters__count",
      "label": "t:sections.search_filter_sort_bar.settings.filters__count.label"
    },
    {
      "type": "header",
      "content": "t:sections.search_filter_sort_bar.settings.header__2.content"
    },
    {
      "type": "checkbox",
      "id": "sort__show",
      "default": true,
      "label": "t:sections.search_filter_sort_bar.settings.sort__show.label"
