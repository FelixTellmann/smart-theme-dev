          "value": "pt-0",
          "label": "t:sections.image_feed.settings.padding_top.options__1.label"
        },
        {
          "value": "pt-sm",
          "label": "t:sections.image_feed.settings.padding_top.options__2.label"
        },
        {
          "value": "pt-md",
          "label": "t:sections.image_feed.settings.padding_top.options__3.label"
        },
        {
          "value": "pt-lg",
          "label": "t:sections.image_feed.settings.padding_top.options__4.label"
        }
      ],
      "label": "t:sections.image_feed.settings.padding_top.label"
    },
    {
      "type": "select",
      "id": "padding_bottom",
      "default": "pb-0",
      "options": [
        {
          "value": "pb-0",
          "label": "t:sections.image_feed.settings.padding_bottom.options__1.label"
        },
        {
          "value": "pb-sm",
          "label": "t:sections.image_feed.settings.padding_bottom.options__2.label"
        },
        {
          "value": "pb-md",
          "label": "t:sections.image_feed.settings.padding_bottom.options__3.label"
        },
        {
          "value": "pb-lg",
          "label": "t:sections.image_feed.settings.padding_bottom.options__4.label"
        }
      ],
      "label": "t:sections.image_feed.settings.padding_bottom.label"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "default": "bg-theme-bg text-theme-text color-inherit",
      "options": [
        {
          "value": "bg-theme-bg text-theme-text color-inherit",
          "label": "t:sections.image_feed.settings.color_scheme.options__1.label"
        },
        {
          "value": "bg-theme-bg text-theme-text color-group-1",
          "label": "t:sections.image_feed.settings.color_scheme.options__2.label"
        },
        {
          "value": "bg-theme-bg text-theme-text color-group-2",
          "label": "t:sections.image_feed.settings.color_scheme.options__3.label"
        },
        {
          "value": "bg-theme-bg text-theme-text color-group-3",
          "label": "t:sections.image_feed.settings.color_scheme.options__4.label"
        }
      ],
      "label": "t:sections.image_feed.settings.color_scheme.label"
    }
  ],
  "max_blocks": 5,
  "blocks": [
    {
      "name": "t:sections.image_feed.blocks.image.name",
      "type": "image",
      "settings": [
        {
          "type": "header",
          "content": "t:sections.image_feed.blocks.image.settings.header__1.content"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.image_feed.blocks.image.settings.image.label"
        },
        {
          "type": "color_background",
          "id": "image__overlay",
          "label": "t:sections.image_feed.blocks.image.settings.image__overlay.label"
        },
        {
          "type": "header",
          "content": "t:sections.image_feed.blocks.image.settings.header__2.content"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.image_feed.blocks.image.settings.title.label"
        },
        {
          "type": "range",
          "id": "title_font",
          "label": "t:sections.image_feed.blocks.image.settings.title_font.label",
          "default": 1,
          "min": 1,
          "max": 7,
          "step": 1,
          "info": "t:sections.image_feed.blocks.image.settings.title_font.info"
        },
        {
          "type": "textarea",
          "id": "subtitle",
          "label": "t:sections.image_feed.blocks.image.settings.subtitle.label"
        },
        {
          "type": "range",
          "id": "subtitle_font",
          "label": "t:sections.image_feed.blocks.image.settings.subtitle_font.label",
