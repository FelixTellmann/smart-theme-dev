        },
        {
          "type": "header",
          "content": "t:sections.image_feed.blocks.image.settings.header__3.content"
        },
        {
          "type": "radio",
          "id": "responsive_visibility",
          "label": "t:sections.image_feed.blocks.image.settings.responsive_visibility.label",
          "default": "responsive",
          "options": [
            {
              "value": "responsive",
              "label": "t:sections.image_feed.blocks.image.settings.responsive_visibility.options__1.label"
            },
            {
              "value": "md:hidden",
              "label": "t:sections.image_feed.blocks.image.settings.responsive_visibility.options__2.label"
            },
            {
              "value": "max-md:hidden",
              "label": "t:sections.image_feed.blocks.image.settings.responsive_visibility.options__3.label"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.image_feed.presets.image_feed.name",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
