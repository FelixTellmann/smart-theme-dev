{%- comment -%} Auto Generated Variables start {%- endcomment -%}
{%- liquid
  assign image__aspect_ratio = section.settings.image__aspect_ratio
  assign min_width = section.settings.min_width
  assign section_layout = section.settings.section_layout
  assign responsive_visibility = section.settings.responsive_visibility
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign color_scheme = section.settings.color_scheme
-%}
{%- comment -%} Auto Generated Variables end {%- endcomment -%}

<div class="{{ section_layout }} {{ color_scheme }} {{ padding_top }} {{ padding_bottom }} {{ responsive_visibility }}"
     data-scroll-slider>
  <div class="grid grid-flow-col-dense overflow-x-auto scrollbar-none relative snap-mandatory snap-x scroll-smooth auto-cols-[minmax(var(--grid-width-mobile),1fr)] scroll-pl-0"
       style="--grid-width-mobile: {{ min_width }}px;"
       data-scroll-container>
    {% for block in section.blocks %}
      {% render 'image-feed.image', block: block %}
    {% endfor %}
  </div>
</div>
{% render '_color-group-access', colorGroup: section.settings.color_scheme, paddingTop: section.settings.padding_top, paddingBottom: section.settings.padding_bottom %}
{% schema %}
{
  "name": "t:sections.image_feed.name",
  "settings": [
    {
      "id": "image__aspect_ratio",
      "type": "select",
      "default": "pb-[100%]",
      "options": [
        {
          "value": "pb-[75%]",
          "label": "t:sections.image_feed.settings.image__aspect_ratio.options__1.label"
        },
        {
          "value": "pb-[100%]",
          "label": "t:sections.image_feed.settings.image__aspect_ratio.options__2.label"
        },
        {
          "value": "pb-[125%]",
          "label": "t:sections.image_feed.settings.image__aspect_ratio.options__3.label"
        }
      ],
      "label": "t:sections.image_feed.settings.image__aspect_ratio.label"
    },
    {
      "type": "range",
      "id": "min_width",
      "label": "t:sections.image_feed.settings.min_width.label",
      "default": 360,
      "min": 200,
      "max": 640,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "t:sections.image_feed.settings.header__1.content"
    },
    {
      "type": "radio",
      "id": "section_layout",
      "label": "t:sections.image_feed.settings.section_layout.label",
      "default": "container-bg-full",
      "options": [
        {
          "value": "container-bg-full",
          "label": "t:sections.image_feed.settings.section_layout.options__1.label"
        },
        {
          "value": "fullwidth",
          "label": "t:sections.image_feed.settings.section_layout.options__2.label"
        }
      ]
    },
    {
      "type": "radio",
      "id": "responsive_visibility",
      "label": "t:sections.image_feed.settings.responsive_visibility.label",
      "default": "responsive",
      "options": [
        {
          "value": "responsive",
          "label": "t:sections.image_feed.settings.responsive_visibility.options__1.label"
        },
        {
          "value": "md:hidden",
          "label": "t:sections.image_feed.settings.responsive_visibility.options__2.label"
        },
        {
          "value": "max-md:hidden",
          "label": "t:sections.image_feed.settings.responsive_visibility.options__3.label"
        }
      ]
    },
    {
